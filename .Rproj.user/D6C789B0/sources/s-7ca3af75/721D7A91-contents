Variable = c("cement_co2", "coal_co2", "flaring_co2", "gas_co2", "land_use_change_co2", "oil_co2", "other_industry_co2"),
Definition = codebook |> 
  filter(column %in% Variable) |>
  pull(description))
kable(country_graph1, caption = "Variables in Graph F1")
